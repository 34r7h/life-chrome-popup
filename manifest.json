{
  "manifest_version": 2,

  "name": "Life",
  "description": "Tracking daily activities from the browser.",
  "omnibox": {"keyword":"pop"},
  "version": "0.6",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Life"

  },
  "icons": { 
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png" 
    },
    
    "permissions": [
        "<all_urls>",
        "notifications",
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"
}
